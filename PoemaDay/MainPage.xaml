<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PoemaDay.MainPage"
    BackgroundColor="#FFFCEE">
    <StackLayout
        
        Margin="20">
       <Label
        
           HorizontalOptions="Center"
           Text="Daily Poem"/>

        <StackLayout
            VerticalOptions="CenterAndExpand">
            <Label Text="Title" Style="{StaticResource titleText}"/>
            <Label Text="Author" Style="{StaticResource subtitleText}" Margin="0,0,0,20"/>
            <Label Text="First line of poem" Style="{StaticResource poemText}"/>
            <Label Text="Second line of poem" Style="{StaticResource poemText}"/>
            <Label Text="Third line of poem is rather long, much much longer than the previous lines." Style="{StaticResource poemText}"/>
            <Label Text="Second line of poem" Style="{StaticResource poemText}"/>
         </StackLayout>
     
    </StackLayout>
</ContentPage>